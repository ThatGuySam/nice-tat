---
// https://github.com/fontsource/font-files/tree/3ef0dc8e3b625831a3ce7d586194c718491b7c6f/fonts/google/jetbrains-mono
import "@fontsource/jetbrains-mono/latin-400.css";
import "@fontsource/jetbrains-mono/latin-500.css";
import { fade, ClientRouter } from 'astro:transitions'

import { SEO } from 'astro-seo';
import { Schema } from 'astro-seo-schema';

import { SITE_NAME, DESCRIPTION } from '../../src/config'

interface Props {
	title: string;
}

// @ts-ignore - TODO figure out type safety on this
const { frontmatter } = Astro.props

const isHome = Astro.url.pathname === '/'

const pageTitle = [
	frontmatter.title ? frontmatter.title : undefined,
	isHome ? SITE_NAME : undefined,
].filter(Boolean).join(' | ')

// SEO: Canonical URL
const canonicalURL = new URL(
	Astro.url.pathname,
	Astro.site
).href;

// SEO: Dynamic OG image path from page URL
// e.g., /contact/ -> /og/contact.png
const pagePath = Astro.url.pathname
	.replace(/^\//, '')
	.replace(/\/$/, '')
	|| 'index';
const ogImageURL = new URL(
	`/og/${pagePath}.png`,
	Astro.site
).href;

// SEO: Page description (use frontmatter or default)
const pageDescription = frontmatter.description
	|| DESCRIPTION;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO: title, description, canonical, OG, Twitter -->
		<SEO
			title={pageTitle}
			description={pageDescription}
			canonical={canonicalURL}
			openGraph={{
				basic: {
					title: pageTitle,
					type: "website",
					image: ogImageURL,
					url: canonicalURL,
				},
				optional: {
					siteName: SITE_NAME,
					description: pageDescription,
				},
				image: {
					alt: pageTitle,
					width: 1200,
					height: 630,
				},
			}}
			twitter={{
				card: "summary_large_image",
				title: pageTitle,
				description: pageDescription,
				image: ogImageURL,
				imageAlt: pageTitle,
			}}
		/>

		<!-- JSON-LD Structured Data -->
		<Schema
			item={{
				"@context": "https://schema.org",
				"@type": isHome ? "WebSite" : "WebPage",
				name: pageTitle || SITE_NAME,
				description: pageDescription,
				url: canonicalURL,
			}}
		/>

		<!-- Sitemap -->
		<link rel="sitemap" href="/sitemap-index.xml" />

		<!-- RSS Feed -->
		<link
			rel="alternate"
			type="application/rss+xml"
			title={ SITE_NAME }
			href="/rss.xml"
		/>

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<ClientRouter />
	</head>
	<body class={`text-gray-500 dark:text-gray-100 ${ isHome ? 'is-home' : '' }`}>
		<div 
			class="max-w-5xl mx-auto space-y-4 py-16 px-14"
			transition:animate={fade({ duration: '350ms' })}
		>
			<main class="max-w-xl">
				<slot />
			</main>

			<footer>
				{ !isHome && (
					<a href="/">home</a>
				)}
			</footer>
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: "JetBrains Mono", system-ui, sans-serif;
		font-size: 12px;
		line-height: 1.2rem;
		background: #13151a;
		background-size: 224px;
	}

	/* Light mode */
	@media (prefers-color-scheme: light) {
		html {
			background: #fff;
		}
	}

	/* We want to bump up the font size on touch screens so that tap targets are easier to hit */
	@media (hover: none) {
		html {
			font-size: 18px;
		}

		/* Pad links that are the only child of a paragraph */
		p > a:only-child {
			padding: 0.5rem 0;
			display: inline-block;
		}
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	h1 {
		font-size: 1.1rem;
		font-style: italic;
		font-weight: 500;
		margin-bottom: 0.3rem;
	}


	body:not(.is-home) a {
		text-decoration: underline;
	}

	/* 
	 * Disable default root view transition to prevent
	 * page title/content flashing during navigation
	 */
	::view-transition-old(root),
	::view-transition-new(root) {
		animation: none;
	}
</style>
